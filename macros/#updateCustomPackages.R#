## make some documentation
library("devtools")
library(roxygen2)
setwd("~/Dropbox/LinuxSync/PhD/ANITA/2017Stuff/clusterDir/antarcticR")
document()
setwd("..")
install("antarcticR")

## make the manual
pack <- "antarcticR"
path <- find.package(pack)

y <- 'cd ../.. ; pwd; rm antarcticR.pdf; cd -'
system(y)

system(paste(shQuote(file.path(R.home("bin"), "R")),"CMD", "Rd2pdf", shQuote(path)))

x <- 'cp ../../antarcticR.pdf .'
system(x)
